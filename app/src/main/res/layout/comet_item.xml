<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comet_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:comet_cardview="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/darkblue"
    comet_cardview:cardCornerRadius="12dp"
    comet_cardview:cardElevation="3dp"
    comet_cardview:contentPadding="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/cometcomparison"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/cometsunimage"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignLeft="@+id/cometcomparisonscale"
            android:layout_alignStart="@+id/cometcomparisonscale" />

        <ImageView
            android:id="@+id/cometsunimage"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cometname"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/comet_sun" />

        <ImageView
            android:id="@+id/earthsunimage"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_alignTop="@+id/cometcomparison"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cometcomparison"
            android:layout_toRightOf="@+id/cometcomparison"
            app:srcCompat="@drawable/earth_sun" />

        <ImageView
            android:id="@+id/cometinfobutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/info"
            android:clickable="true"
            android:layout_below="@+id/cometcomparisonscale"
            android:layout_alignLeft="@+id/cometsunimage"
            android:layout_alignStart="@+id/cometsunimage" />

        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/cometname"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/earthsunimage"
            android:layout_toEndOf="@+id/earthsunimage" />

        <TextView
            android:textSize="11sp"
            android:textColor="@color/white"
            android:id="@+id/cometdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/cometname"
            android:layout_alignLeft="@+id/cometname"
            android:layout_alignStart="@+id/cometname" />

        <TextView
            android:textSize="11sp"
            android:id="@+id/cometcomparisonscale"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/cometsunimage"
            android:layout_toRightOf="@+id/cometsunimage"
            android:layout_toEndOf="@+id/cometsunimage" />

    </RelativeLayout>
</android.support.v7.widget.CardView>